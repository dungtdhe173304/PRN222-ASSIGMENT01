@model ThieuDucDungMVC.Models.SystemAccount

@{
    ViewData["Title"] = "Delete Account";
}

<h2>Delete Account</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<p>Are you sure you want to delete this account?</p>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <td>@Model.AccountName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.AccountEmail</td>
    </tr>
    <tr>
        <th>Role</th>
        <td>@(Model.AccountRole == 1 ? "Staff" : Model.AccountRole == 2 ? "Lecturer" : "Admin")</td>
    </tr>
</table>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.AccountId" method="post">
    <input type="hidden" asp-for="AccountId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageAccount" class="btn btn-secondary">Cancel</a>
</form>
