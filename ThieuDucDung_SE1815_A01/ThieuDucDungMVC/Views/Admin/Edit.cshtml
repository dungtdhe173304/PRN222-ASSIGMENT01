@model ThieuDucDungMVC.Models.SystemAccount

@{
    ViewData["Title"] = "Edit Account";
}

<h2>Edit Account</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AccountId" />

    <div class="form-group">
        <label>Name</label>
        <input asp-for="AccountName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="AccountEmail" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="text" name="AccountPassword" class="form-control" value="@Model.AccountPassword" required />
    </div>

    <div class="form-group">
        <label>Role</label>
        @if (ViewBag.DisableRoleChange != null && (bool)ViewBag.DisableRoleChange)
        {
            <input class="form-control" value="Admin" readonly />
            <input type="hidden" asp-for="AccountRole" />
        }
        else
        {
            <select asp-for="AccountRole" class="form-control" asp-items="ViewBag.Roles"></select>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ManageAccount" class="btn btn-secondary">Cancel</a>
</form>
