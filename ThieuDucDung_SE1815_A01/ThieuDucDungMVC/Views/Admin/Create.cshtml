@model ThieuDucDungMVC.Models.SystemAccount

@{
    ViewData["Title"] = "Create Account";
}

<h2>Create Account</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="AccountName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="AccountEmail" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="AccountPassword" type="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Role</label>
        <select asp-for="AccountRole" class="form-control" asp-items="ViewBag.Roles"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="ManageAccount" class="btn btn-secondary">Cancel</a>
</form>
