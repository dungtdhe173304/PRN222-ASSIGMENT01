@model ThieuDucDungMVC.Models.NewsArticle

@{
    ViewData["Title"] = "Add News Article";
}

<h2>Add News Article</h2>

<form asp-action="CreateNewsArticle" method="post">
    <!-- News Article ID -->
    <div class="form-group">
        <label>News Article ID</label>
        <input type="text" name="NewsArticleId" class="form-control" placeholder="Enter unique ID" required />
    </div>

    <!-- Title -->
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="NewsTitle" class="form-control" required />
    </div>

    <!-- Headline -->
    <div class="form-group">
        <label>Headline</label>
        <input type="text" name="Headline" class="form-control" required />
    </div>

    <!-- News Content -->
    <div class="form-group">
        <label>News Content</label>
        <textarea name="NewsContent" class="form-control" rows="4" required></textarea>
    </div>

    <!-- News Source -->
    <div class="form-group">
        <label>News Source (Optional)</label>
        <input type="text" name="NewsSource" class="form-control" />
    </div>

    <!-- Category -->
    <div class="form-group">
        <label>Category</label>
        <select name="CategoryId" class="form-control" required>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
    </div>

    <!-- Created By -->
    <div class="form-group">
        <label>Created By</label>
        <select name="CreatedById" class="form-control" required>
            <option value="">-- Select User --</option>
            @foreach (var user in ViewBag.SystemAccounts)
            {
                <option value="@user.AccountId">@user.AccountName</option>
            }
        </select>
    </div>


    <!-- Updated By -->
    <div class="form-group">
        <label>Updated By</label>
        <select name="UpdatedById" class="form-control">
            <option value="">-- Select User (Optional) --</option>
            @foreach (var user in ViewBag.SystemAccounts)
            {
                <option value="@user.AccountId">@user.AccountName</option>
            }
        </select>
    </div>


    <!-- Add News Button -->
    <button type="submit" class="btn btn-success mt-3">Add News</button>
    <button type="button" class="btn btn-secondary mt-3" onclick="window.location.href='@Url.Action("ManageNewsArticle", "Staff")'">Back</button>

</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
}
