@model NewsArticle
@{
    ViewData["Title"] = "Delete News Article";
}

<h2>Delete News Article</h2>
<p>Are you sure you want to delete this article?</p>

<table class="table">
    <tr><th>Title</th><td>@Model.NewsTitle</td></tr>
    <tr><th>Headline</th><td>@Model.Headline</td></tr>
    <tr><th>Created Date</th><td>@Model.CreatedDate</td></tr>
    <tr><th>News Content</th><td>@Model.NewsContent</td></tr>
</table>

<form asp-action="DeleteNewsArticle" method="post">
    <input type="hidden" name="NewsArticleId" value="@Model.NewsArticleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("ManageNews", "Staff")">Cancel</a>
</form>
